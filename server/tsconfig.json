{
  "compilerOptions": {
    "target": "ES2022", // Modern JS features
    "module": "NodeNext", // Critical for ESM in Node
    "moduleResolution": "NodeNext", // Critical for ESM resolution
    "lib": ["ESNext"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true, // Allows importing CommonJS modules (like 'pg') cleanly

    // TypeORM Requirements
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
